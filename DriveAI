  <script>
    function calcularMetaDiaria() {
      const aluguer = parseFloat(document.getElementById('aluguer').value) || 0;
      const seguros = parseFloat(document.getElementById('seguros').value) || 0;
      const manutencao = parseFloat(document.getElementById('manutencao').value) || 0;
      const combustivel = parseFloat(document.getElementById('combustivel').value) || 0;
      const extras = parseFloat(document.getElementById('extras').value) || 0;
      const dias = parseInt(document.getElementById('dias').value);

      const totalDespesas = aluguer + seguros + manutencao + combustivel + extras;
      const metaDiaria = (totalDespesas / dias).toFixed(2);

      document.getElementById('resultado').innerHTML = `
        <strong>Total de despesas mensais:</strong> ${totalDespesas.toFixed(2)}€<br>
        <strong>Meta mínima diária:</strong> ${metaDiaria}€/dia<br>
        <span style="color:#555;">Este é o valor que precisas gerar por dia para cobrir todos os custos.</span>
      `;
    }
  </script>
